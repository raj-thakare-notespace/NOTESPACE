<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePictureFollowRequest"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/line"
        android:layout_marginBottom="16dp"
        android:src="@drawable/profile_placeholder" />

    <ImageView
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/rejectButton"
        android:src="@drawable/ic_check_circle" />

    <ImageView
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_cancel_circle" />

    <TextView
        android:id="@+id/usernameTVFollowRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/profilePictureFollowRequest"
        android:text="rajthakare237"
        android:textColor="@color/black"
        android:textSize="22sp" />

