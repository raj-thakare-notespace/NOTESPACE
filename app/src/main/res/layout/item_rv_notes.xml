<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/background"
    app:cardCornerRadius="5dp"
    app:strokeColor="@color/gray"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/RVIVNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="0.5dp"
            android:background="@drawable/your_note_item_image_bg"
            android:src="@drawable/image_placeholder"
            android:visibility="visible" />


        <!--text view for displaying our note text-->
        <TextView
            android:id="@+id/idNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/RVIVNote"
            android:padding="12dp"
            android:text="Note Title"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!--text view for displaying our last updated text-->
        <TextView
            android:id="@+id/idNoteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idNoteTitle"
            android:maxLines="4"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="13sp" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>